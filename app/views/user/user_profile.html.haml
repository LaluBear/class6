%p#notice %= notice 

.d-flex.flex-row.bd-highlight.mb-3
  .p-2.bd-highlight
    - if(@user.posts)
      - @user.posts.each_with_index do |post,index|
        = link_to "#{(post.user).name}", "/profile/#{(post.user).name}"
        %br
        = post.msg
        %br
        = post.created_at
        %br
        = "#{(post.likes).count} likes"
        %button.btn.btn-primary{"data-bs-target" => "#exampleModal", "data-bs-toggle" => "modal", :type => "button"}
          Show Like People

        #exampleModal.modal.fade{"aria-hidden" => "true", "aria-labelledby" => "exampleModalLabel", :tabindex => "-1"}
          .modal-dialog
            .modal-content
              .modal-header
                %h5#exampleModalLabel.modal-title Like People
                  %button.btn-close{"aria-label" => "Close", "data-bs-dismiss" => "modal", :type => "button"}
              .modal-body
                = "#{(post.likes).count} likes"
                - post.likes.each do |like|
                  = link_to "#{like.user.name}", "/profile/#{like.user.name}"
                  %br
              .modal-footer
                %button.btn.btn-secondary{"data-bs-dismiss" => "modal", :type => "button"} Close
                %br
        - if(post.likes.find_by(user_id: session[:user_id]))
          = link_to "unlike ", "/unlike/#{post.id}"
        - else
          = link_to "like ", "/like/#{post.id}"
        %br
        %p -----------------------------------------------------------------
  .p-2.bd-highlight
    %p
      %b Email:
      = @user.email
    %p
      %b Name:
      = @user.name
    %p
      %b Password:
      = @user.password
    - if(@is_follow)
      = link_to 'Unfollow', "/unfollow/#{@user.id}"
    - elsif(not(@is_self))
      = link_to 'Follow', "/follow/#{@user.id}"
