%p#notice= notice

.d-flex.flex-row.bd-highlight.mb-3
  .p-2.bd-highlight
    - @user.posts.each do |post|
      = post.msg
      = post.created_at
      %br
  .p-2.bd-highlight
    %p
      %b Email:
      = @user.email
    %p
      %b Name:
      = @user.name
    %p
      %b Password:
      = @user.password
    - if(@is_follow)
      = link_to 'Unfollow', "/unfollow/#{@user.id}"
    - else
      = link_to 'Follow', "/follow/#{@user.id}"
  <div class="d-flex align-items-stretch">...</div>
