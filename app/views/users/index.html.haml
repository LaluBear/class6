


%h1 Listing users


%table
  %thead
    %tr
      %th Id
      %th Email
      %th Name
      %th Password
      %th
      %th
      %th

  %tbody
    - @users.each do |user|
      %tr
        %td= user.id
        %td= user.email
        %td= user.name
        %td= user.password
        %td= link_to 'Show', "users/#{user.id}"
        %td= link_to 'Edit', edit_user_path(user)
        %td= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }

%br

= link_to 'New User', new_user_path
